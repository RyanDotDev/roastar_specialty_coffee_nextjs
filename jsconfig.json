{
  "compilerOptions": {
    "jsx": "preserve",
    "baseUrl": "./",
    "paths": {
      "@/*": [
        /* '/src/*'' paths */
        "./src/*",
        "./src/lib/*", 
        "./src/pages/*",
        "./src/store/*", 
        "./src/styles/*", 
        "./src/theme/*", 
        /* '/src/app/*' paths */
        "./src/app/*",
        "./src/app/components/*",
        "src/lib/api/*",
        "./src/app/utils/*",
        "./src/app/pages/*",
      ]
    },
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "**/*.js",
    "**/*.jsx",
    "src/layout.jsx",
    "src/page.jsx",
    ".next/types/**/*.ts"
, "src/lib/api/shopify/route.js", "src/lib/api/shopify/products.js" , "next.config.mjs", "next.config.mjs" ],
  "exclude": []
}

/*
Next.js layout
root/
|-- src/                         # Add src/ to align with your existing project
|   |-- app/                     # For server-side routing (Next.js 13+)
|   |-- public/                  # For static assets like images
|   |-- components/              # Move your reusable components here
|   |-- pages/                   # If using the pages router
|       |-- api/                 # API routes (similar to your server endpoints)
|   |-- store/                   # Your Redux store
|   |-- styles/                  # Centralized styles (e.g., global.css)
|   |-- theme/                   # Keep your Material-UI theme here
|   |-- app/layout.tsx           # App-wide layout in the app/ directory
|   |-- app/page.tsx             # The default root page
|-- .env.local                   # Environment variables
|-- next.config.js               # Next.js configuration
|-- package.json                 # Dependencies
*/
